<html>
  <head>
    <title>Login/Sign Up Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      .gradient-custom{
        background:  rgb(1, 8, 20)

      }
    </style>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <%- include('./partials/header',{userName:user}); %>
    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-12 col-lg-9 col-xl-7" style="margin-top: 75px;">
            <div class=" p-2 p-md-2 justify-content-center align-items-center">  
              <h3 style="color: #fff;">For Publishing fill up this form</h3>
            </div>
            <div
              class="card shadow-2-strong card-registration"
              style="border-radius: 15px"
            >
           
              <form method="POST" action="/request" enctype="multipart/form-data">
                <div class="row align-items-center pt-4 pb-3">
                  <div class="col-3 col-md-3 ps-5">
    
                    <h6 class="mb-0">Full name :</h6>
    
                  </div>
                  <div class=" col-9 col-md-9 pe-5">
    
                    <input type="text" class="form-control form-control-lg" name="fullname"/>
    
                  </div>
                </div>
    
         
    
                <div class="row align-items-center py-3">
                  <div class="col-3 col-md-3 ps-5">
    
                    <h6 class="mb-0">Email :</h6>
    
                  </div>
                  <div class="col-9 col-md-9 pe-5">
    
                    <input type="email" class="form-control form-control-lg" name="email"  />
    
                  </div>
                </div>
    

    
                <div class="row align-items-center py-3">
                  <div class=" col-3 col-md-3 ps-5">
    
                    <h6 class="mb-0">Designation :</h6>
    
                  </div>
                  <div class="col-9 col-md-9 pe-5">
    
                    <input type="text" class="form-control form-control-lg" name="designation" />

                  </div>
                </div>
    
    
                <div class="row align-items-center py-3">
                  <div class="col-3 col-md-3 ps-5">
    
                    <h6 class="mb-0">Id :</h6>
    
                  </div>
                  <div class="col-9 col-md-9 pe-5">
    
                    
                      <input class="form-control" type="file" id="formFile" name="vid" />
                      <!-- <input type="text" name="vid" class="form-control"> -->
                   
    
                  </div>
                </div>

                <div class="row align-items-center py-3">
                  <div class="col-3 col-md-3 ps-5">
    
                    <h6 class="mb-0">phone:</h6>
    
                  </div>
                  <div class="col-9 col-md-9 pe-5">
    
                    
                      <input class="form-control" type="text" name="phone" />
                   
    
                  </div>
                </div>
    
               
    
                <div class="px-5 py-4">
                  <button type="submit" class="btn btn-primary btn-lg">Send application</button>
                </div>
    
              </div>
            </div>
              </form>
             

            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
